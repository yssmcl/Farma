<header class='page-header' >
  {{#if id }}
    <h4>Editar exercício do OA {{lo.name}}</h4>
  {{else}}
    <h4>Novo exercício para o OA {{lo.name}}</h4>
  {{/if}}
</header>
<form action="" id="exercise-form" class="form-vertical" novalidate>
  <input name="id" type="hidden" />

  <fieldset>

    <div class="control-group title_group">
      <label class="control-label" for="title">Título *</label>
      <div class="controls">
        <input id="title" name="title" type="text" required="required" />
      </div>
    </div>

    <div class="control-group subtopic_group">
      <label class="control-label" for="subtopic">Subtópico *</label>
      <div class="controls">
        <input id="subtopic" name="subtopic" type="text" required="required" />
      </div>
    </div>

    <div class="control-group content_group">
      <label class="control-label" for="content">Enunciado *</label>
      <div class="controls">
        <textarea id='ckeditor' name="content" required="required"></textarea>
      </div>
    </div>

    <div class="control-group available_group">
      <div class="controls">
        <label class="checkbox">
          <input type="checkbox" name='available'> Publicar
        </label>
      </div>
    </div>

    <div class="control-group introduction_ids_group">
      <label class="control-label" for="introduction_ids">Selecione as introduções que deseja vincular:</label>
      <div class="controls checkbox-column">
        <div class="checkboxes"></div>
      </div>
    </div>
    <br>

    <div class="form-actions">
      <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>

  </fieldset>
</form>
